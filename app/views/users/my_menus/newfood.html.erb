<%= javascript_include_tag "admins/genre.js" %>

<div class="container">
	<div class="row">
		<div class="col-xs-12 title-text">
			<p class="subtitle">
				  <span class="sub-menu">
				  	FOOD CREATE:
				  </span>
			  	&mdash; Eating is making the body. &mdash;
			</p>
		</div>
	</div>
	<%= form_for(@food, url:selffood_users_my_menu_path(current_user),method: :post) do |f| %>
		<div class = "food">
			<div class = "food_colums">
				<div class="field">
					<%= attachment_image_tag @food, :food_image, src: "", id:"img_prev", size: "200x200", alt:"Image preview", class: "item_prev", fallback: "no_image.jpg" %>
				</div>
			 	<div class="field">
					<%= f.label :food_image,"image change" ,class: "btn btn-warning btn-lg" ,for:"post_img"%>
					<%= f.attachment_field :food_image, id:"post_img", class: "image", style:"display:none;" %>
				</div>
		    </div>
		    <div class = "food_colums">
			 	<div class="field">
					<%= f.label :food_name, "商品名" %><br />
					<%= f.text_field :food_name %>
				</div>
				<div class="field">
					<%= f.label :food_content, "商品説明" %><br />
					<%= f.text_area :food_content %>
				</div>
			</div>
			<div class = "food_colums">
				<div class="field">
					<%= f.label :ingestion_cal, "カロリー" %><br />
					<%= f.number_field :ingestion_cal, placeholder: '半角数字' %><span class="unit">kcal</span>
				</div>
				<div class="field">
					<%= f.label :protein, "タンパク質" %><br />
					<%= f.number_field :protein, placeholder: '半角数字' %><span class="unit">g</span>
				</div>
				<div class="field">
					<%= f.label :fat, "脂質" %><br />
					<%= f.number_field :fat, placeholder: '半角数字' %><span class="unit">g</span>
				</div>
				<div class="field">
					<%= f.label :carb, "炭水化物" %><br />
					<%= f.number_field :carb, placeholder: '半角数字' %><span class="unit">g</span>
				</div>
					<%= f.hidden_field :food_genre_id, :value => @food.food_genre_id %>
			</div>
		</div>
		<div class="row admin-item-show-btn">
			<%= f.submit "New Food", class: "new-btn" %>
		</div>
	<% end %>
</div>