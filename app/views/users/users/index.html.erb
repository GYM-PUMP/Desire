<div class ="container">
		<div class = "row">
			<div class="col-xs-8 col-xs-offset-2">
				<h2 class="elementor-heading-title">USERS:</h2>
				<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
						<th></th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					<% @users.each do |user| %>
					   <% if current_user.id != user.id %>
						  <% if user.user_status == true %>
							<tr>
								<% if user.gender == true %>
									<td><%= attachment_image_tag user, :image, :fill, 50, 50, fallback: "man-no-image.png" %></td>
								<% else %>
									<td><%= attachment_image_tag user, :image, :fill, 50, 50, fallback: "woman-no-image.png" %></td>
								<% end %>
								<td><%= user.name  %></td>
								<td>
									<a type="button" data-toggle="modal" data-target="#sampleModal-<%= user.id %>" style="cursor: pointer;">
                          				<%= image_tag 'follows.png' , height: "80px", width: "80px" %>
                        			</a>
								</td>
								<td><% if current_user.id != user.id %>
										<% if current_user.following?(user) %>
											<%= link_to 'UN FOLLOW', users_user_relationships_path(user.id), method: :DELETE, class: "btn-sm btn-danger" %>
										 <% else %>
										 	<%= link_to 'FOLLOW', users_user_relationships_path(user.id), method: :POST, class: "btn-sm btn-success" %>
										<% end %>
									<% end %>
								</td>
								<td><%= link_to "PROFILE", users_user_path(user), class: "user_#{user.id}" %></td>
								<td>
									<!-- モーダル・ダイアログ -->
			                        <div class="modal fade" id="sampleModal-<%= user.id %>" tabindex="-1">
			                            <div class="modal-dialog">
			                                <div class="modal-content">
			                                    <div class="modal-header">
			                                        <div class ="following-user">
			                                            <div class="row">
			                                                <div class="col-xs-2"></div>
			                                                <div class="col-xs-3">
			                                                    <%= link_to follow_users_user_path(user.id) do %>
			                                                    	<span><%= user.follower.map(&:followed).count %></span>
			                                                    	<%= image_tag 'follower.png' , height: "100px", width: "auto" %>
			                                                    <% end %>
			                                                </div>
			                                                <div class="col-xs-2">
			                                                </div>
			                                                <div class="col-xs-3" >
			                                                	<%= link_to follower_users_user_path(user.id) do %>
			                                                		<span><%= user.followed.map(&:follower).count %></span>
			                                                   		<%= image_tag 'followed.png' , height: "100px", width: "auto" %>
			                                                    <% end %>
			                                                </div>
			                                                <div class="col-xs-2">
			                                                </div>
			                                            </div>
			                                        </div>
			                                        <div class ="followed-user">
			                                        </div>
			                                    </div>
			                                </div>
			                            </div>
			                        </div>
								</td>
							</tr>
						  <% end %>
					   <% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
