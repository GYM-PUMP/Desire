<div class ="container">
	<div class = "row">
		<div class="col-xs-8 col-xs-offset-2">
			<h2 class="elementor-heading-title">USERS:</h2>
			<%= link_to "退会する", withdraw_users_user_path(@user), class:"col-xs-2 btn btn-danger" %>
				<%= form_with(model: [:users, @user]) do |f| %>
				<!-- エラーメッセージ表示-->
					<% if @user.errors.any? %>
						<h3><%= @user.errors.count %>error occurrence</h3><!--エラーメッセ-->
						<ul>
							<% @user.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
					</ul>
				<% end %>
					<!-- エラーメッセージ表示-->

					<div class="field">
						<%= f.label :image %>
						<%= f.attachment_field :image, class: "image" %>
					</div>

					<div class="field">
						<%= f.label :name %>
						<%= f.text_field :name, class: "name" %>
					</div>

					<div class="field">
						<%= f.label :postal_code %>
						<%= f.text_field :postal_code, class: "postal_code" %>
					</div>
					<div class="field">
						<%= f.label :address %>
						<%= f.text_field :address, class: "address" %>
					</div>
					<div class="field">
						<%= f.label :gender %>
						<%= f.text_field :gender, class: "gender" %>
					</div>
					<div class="field">
						<%= f.label :age %>
						<%= f.text_field :age, class: "age" %>
					</div>
					<div class="field">
						<%= f.label :height %>
						<%= f.text_field :height, class: "height" %>
					</div>
					<div class="field">
						<%= f.label :weight %>
						<%= f.text_field :weight, class: "weight" %>
					</div>
					<div class="field">
						<%= f.label :gym_id %><br />
						<%= f.text_field :gym_id %>
					</div>

					<div class="actions">
						<%= f.submit %>
					</div>
				<% end %>
		</div>
	</div>
</div>