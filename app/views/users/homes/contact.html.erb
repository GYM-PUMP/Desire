<div class = "container signup">
	<div class="row">
		<div class="col-xs-12">
			<h2 class="elementor-heading-title">ご意見・ご要望フォーム:</h2>
		</div>
	</div>
  <div class="row">
    <div class="col-xs-12">
      <% if @contact.errors.any? %>
        <div id="error_explanation">
          <h3><%= @contact.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
          <% @contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
	<div class="row">
		<div class="form">
    		<%= form_for(@contact, url: users_user_contact_path(current_user), method: :post) do |f| %>
        <div class = "row toiawase-row">
            <div class="toiawase">
              <%= f.label :name %><br />
              <%= current_user.name %>
            </div>
            <div class="toiawase">
              <%= f.label :email %><br />
              <%= current_user.email %>
            </div>
            <div class="toiawase">
              <%= f.label :message %><br />
              <%= f.text_area :message, class: 'feedback', placeholder: 'message' %>
            </div>
            <div class="submit">
              <%= f.submit '送信', class: 'signup-btn' %>
            </div>
        </div>
      	<% end %>
  		</div>
  	</div>
