<div class ="container">
	<div class = "row">
		<div class="col-xs-12 title-text">
			<p class="subtitle">
				  <span class="sub-menu">
				  	SUPPLEMENTS:
				  </span>
			  	&mdash; A large selection of Supplement &mdash;
			</p>
		</div>
	</div>
	<div class="col-xs-2" style="border: 1px solid #000;">
 			<h3 style="border-bottom: 1px solid #000;">ジャンル検索</h3>
 			<table>
 				<tr>
 					<td><%= link_to "ALL SUPPLEMENTS", users_supplements_path %></td>
 				</tr>
	 			<% @genres.each do |genre| %>
	 				<tr>
						<td>
							<%= link_to users_supplements_path(category: genre.genre_name) do %>
								<%= genre.genre_name %>
							<% end %>
						</td>
					</tr>
	 			<% end %>
	 		</table>
 		</div>
 		<div class="col-xs-9 col-xs-offset-1">
 			<% if params[:category].present? %>
 				<h2>
 					<%= @genre.genre_name %>
 					<span>(全<%= @supplements_quantity %>件)</span>
 				</h2>
 			<% else %>
 				<h2>ALL SUPPLEMENTS<span>(全<%= @supplements_quantity %>件)</span></h2>
 			<% end %>
 		</div>

		<div class="row">
			<% @supplements.each do |supplement| %>
			<!-- <%# @supplement.each do |supplements| %> -->
	   			<div class="col-xs-2">
	   				<%#= link_to admins_supplement_path(supplement) do %>
						<div class="hoge">
							<button type="button" data-toggle="modal" data-target="#sampleModal-<%= supplement.id %> ">
								<div class="thumbnail">
									<%= attachment_image_tag supplement, :supple_image, :fill, 200, 200, format: 'jpeg' %>
									<div class="caption">
										<p class="text-over"><%= supplement.item_name.truncate(10) %></p>
										<p class="text-over"><%= supplement.description.truncate(10) %></p>
										<p class="text-over">￥<%= supplement.price %></p>
										<p class="text-over"><%= supplement.maker.truncate(10) %></p>
										<p class="text-over"><%= supplement.genre.genre_name.truncate(10) %></p>

									</div>
								</div>
							</button>
						</div>
						<%= render 'show', { supplement: supplement } %>
						<div class="row admin-item likes_buttons_<%= supplement.id %>">
							<%= render partial: 'users/likes/like', locals: { supplement: supplement} %>
						</div>
							<!-- Supplement.allで取り出した１つをrenderでshowに引き渡す -->
					<%# end %>
	  			</div>
	  			<%# end %>
  			<% end %>
		</div>
</div>