<div class ="container">
	<div class = "row">
		<div class="col-xs-8 col-xs-offset-2">
			<h2 class="elementor-heading-title">FOODS:</h2>
		</div>
	</div>
	<div class="row select-item">
		<table class="table food_active">
			<tr class="food-tr">
				<th class="food_active" colspan="2">商品名</th>
				<th class="food_active">カロリー</th>
				<th class="food_active">タンパク質</th>
				<th class="food_active">脂質</th>
				<th class="food_active">炭水化物</th>
				<th class="food_active">ジャンル</th>
				<th class="food_active"></th>
			</tr>
		   <% @foods.each do |food| %>
				<tr>
					<td><%= attachment_image_tag food, :food_image, size: "40x40", fallback: "no_image.jpg" %></td>
					<td><%= link_to food.food_name, admins_food_path(food) %></td>
					<td><%= food.ingestion_cal %>kcal</td>
					<td><%= food.protein %>g</td>
					<td><%= food.fat %>g</td>
					<td><%= food.carb %>g</td>
					<td><%= food.food_genre.food_genre_name %></td>
					<td><%= link_to "DELETE",admins_food_path(food.id), method: :delete, class: "destroy-btn", data: { confirm: '本当に消しますか？' } %></td>
				</tr>
		    <% end %>
		</table>
		<%= paginate @foods %>
	</div>
	<div class="row btn-footer">
		<%= link_to "NEW FOOD", new_admins_food_path,class: "new-btn" %>
	</div>
</div>

