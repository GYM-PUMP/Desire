<div class ="container">
		<div class = "row">
			<div class="col-xs-8 col-xs-offset-2">
				<h2 class="elementor-heading-title">SUPPLEMENT SHOW:</h2>
			</div>
		</div>
			 <%= attachment_image_tag @supplement, :supple_image,:fill, 200, 200, format: 'jpeg', class: "col-xs-2 col-xs-offset-1 pull-left profile-img", fallback: "no_image.jpg" %>

			<div class="col-xs-6">
				<div class="row admin-item">
					<h4 class="col-xs-3"></h4>
					<h4 class="col-xs-6"><%= @supplement.item_name %></h4>
				</div>
				<div class="row admin-item">
					<h4 class="col-xs-3"></h4>
					<h4 class="col-xs-6"><%= @supplement.description %></h4>
				</div>
				<div class="row admin-item">
					<h4 class="col-xs-3"></h4>
					<h4 class="col-xs-6">￥<%= @supplement.price %></h4>
				</div>
				<div class="row admin-item">
					<h4 class="col-xs-3"></h4>
					<h4 class="col-xs-6"><%= @supplement.maker %></h4>
				</div>
				<div class="row admin-item">
					<h4 class="col-xs-3"></h4>
					<h4 class="col-xs-6"><%= @supplement.genre.genre_name %></h4>
				</div>
				<div class="row admin-item">
					<h4 class="col-xs-3"></h4>
					<h4 class="col-xs-6"><%= @supplement.sales_target_url %></h4>
				</div>
			</div>
		</div>
		<div class="row admin-item-show-btn">
			<%= link_to "編集する", edit_admins_supplement_path(@supplement),class: "col-xs-2 col-xs-offset-9 btn btn-primary" %>
			<%= link_to "一覧へ戻る", admins_supplements_path,class: "col-xs-2 col-xs-offset-9 btn btn-primary" %>
		</div>

	</div>