<%= javascript_include_tag "admins/genre.js" %>
<div class ="container">
	<div class = "row">
		<div class="col-xs-8 col-xs-offset-2">
			<h2 class="elementor-heading-title">SUPPLEMENT EDIT:</h2>
		</div>
	</div>
	<%= form_for(@supplement, url:admins_supplement_path(@supplement),method: :patch) do |f| %>
		<div class="row">
			<div class="col-xs-3 col-xs-offset-1">
				 <%= attachment_image_tag @supplement, :supple_image, src: "", id:"item_image", size: "200x200", alt:"Image preview", class: "item_prev", fallback: "no_image.jpg" %>
			 	<%= f.attachment_field :supple_image %>
			</div>
			<div class="col-xs-8">
				<div class="row admin-item">
					<%= f.label :item_name, "商品名", class:"col-xs-2" %>
					<%= f.text_field :item_name, class:"col-xs-4" %>
				</div>
				<div class="row admin-item">
					<%= f.label :description, "商品説明", class:"col-xs-2" %>
					<%= f.text_field :description, class:"col-xs-4" %>
				</div>
				<div class="row admin-item">
					<%= f.label :price, "価格", class:"col-xs-2" %>
					￥<%= f.number_field :price, class:"col-xs-4" %>
				</div>
				<div class="row admin-item">
					<%= f.label :maker, "メーカー", class:"col-xs-2" %>
					<%= f.text_area :maker, class:"col-xs-4" %>
				</div>
				<div class="row admin-item">
					<%= f.label :genre_id, "ジャンル", class:"col-xs-2" %>
					<%= f.collection_select :genre_id, Genre.all, :id, :genre_name, class:"col-xs-4" %>
				</div>
			</div>
		</div>
		<div class="row admin-item-show-btn">
			<%= f.submit "変更を保存", class:"col-xs-2 col-xs-offset-8 btn btn-primary"  %>
		</div>
	<% end %>
</div>
