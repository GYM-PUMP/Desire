<%= javascript_include_tag "admins/genre.js" %>

<div class = "container">
	<div class = "row">
		<div class="col-xs-12">
			<h3 class="elementor-heading-title">SUPPLEMENT CREATE:</h3>
		</div>
	  <%= form_for(@supplement, url:admins_supplements_path(@supplement),method: :post) do |f| %>
		<div class="col-xs-4" style="margin-top: 100px;">
			<%= f.attachment_field :supple_image, id:"post_img" %>
		</div>
		<div class="col-xs-8">
			<div class="row admin-item">
				<%= f.label :item_name, "商品名", class:"col-xs-2" %>
				<%= f.text_field :item_name, class:"col-xs-4" %>
			</div>
			<div class="row admin-item">
				<%= f.label :description, "商品説明", class:"col-xs-2" %>
				<%= f.text_area :description, class:"col-xs-4" %>
			</div>
			<div class="row admin-item">
				<%= f.label :price, "価格", class:"col-xs-2" %>
				￥<%= f.number_field :price, class:"col-xs-4" %>
			</div>
			<div class="row admin-item">
				<%= f.label :maker, "メーカー名", class:"col-xs-2" %>
				<%= f.text_field :maker, class:"col-xs-4" %>
			</div>
			<div class="row admin-item">
				<%= f.label :genre_id, "ジャンル", class:"col-xs-2" %>
				<%= f.collection_select :genre_id, Genre.all, :id, :genre_name, class:"col-xs-4" %>
			</div>
			<div class="row admin-item">
				<%= f.label :sales_target_url, "販売先URL", class:"col-xs-2" %>
				<%= f.text_area :sales_target_url, class:"col-xs-4" %>
			</div>
		</div>
	</div>
		<div class="row admin-item-show-btn">
			<%= f.submit "新規登録", class:"col-xs-2 col-xs-offset-8 btn btn-primary" %>
		</div>
	  <% end %>
</div>
