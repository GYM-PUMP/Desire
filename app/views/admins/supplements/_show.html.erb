<!-- モーダル・ダイアログ -->
<div class="modal fade" id="sampleModal-<%= supplement.id %>" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content modal_back">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span>×</span></button>
				<h4 class="modal-title">SUPPLEMENT SHOW</h4>
			</div>
			<div class="modal-body">
				 <%= attachment_image_tag supplement, :supple_image,:fill, 300, 400, format: 'jpeg', fallback: "no_image.jpg"%>
				<div class="row admin-item">
					<h3>NAME:</h3>
					<h4 class="col-xs-12"><%= supplement.item_name %></h4>
				</div>
				<div class="row admin-item">
					<h3>DESCRIPTION:</h3>
					<h4 class="col-xs-12"><%= supplement.description %></h4>
				</div>
				<div class="row admin-item">
					<h3>PRICE:</h3>
					<h4 class="col-xs-12">￥<%= supplement.price %></h4>
				</div>
				<div class="row admin-item">
					<h3>MAKER:</h3>
					<h4 class="col-xs-12"><%= supplement.maker %></h4>
				</div>
				<div class="row admin-item">
					<h3>GENRE:</h3>
					<h4 class="col-xs-12"><%= supplement.genre.genre_name %></h4>
				</div>
			</div>
			<div class="modal-footer">
				<%= link_to "編集する", edit_admins_supplement_path(supplement),class: "btn btn-primary" %>
				<%= link_to "一覧へ戻る", admins_supplements_path(supplement),class: "btn btn-primary" %>
				<button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
			</div>
		</div>
	</div>
</div>

