<div class ="container">
	<div class = "row">
		<div class="col-xs-8 col-xs-offset-2">
			<h2 class="elementor-heading-title">ARTICLE SHOW:</h2>
		</div>
	</div>
		 <%= attachment_image_tag @article, :article_image,:fill, 60, 60, format: 'jpeg', class: "col-xs-2 col-xs-offset-1 pull-left profile-img", fallback: "no_image.jpg" %>

		<div class="col-xs-6">
			<div class="row admin-item">
				<h4 class="col-xs-3"></h4>
				<h4 class="col-xs-6"><%= @article.title %></h4>
			</div>

			<div class="row admin-item">
				<h4 class="col-xs-3"></h4>
				<h4 class="col-xs-6"><%= @article.body %></h4>
			</div>

			</div>
		</div>
	</div>
	<div class="row admin-item-show-btn">
		<%= link_to "編集する", edit_admins_article_path,class: "col-xs-2 col-xs-offset-9 btn btn-primary" %>
		<%= link_to "一覧へ戻る", admins_articles_path,class: "col-xs-2 col-xs-offset-9 btn btn-primary" %>
	</div>

</div>