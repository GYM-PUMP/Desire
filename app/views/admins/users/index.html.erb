<div class ="container">
		<div class = "row">
			<div class="col-xs-8 col-xs-offset-2">
				<h2 class="elementor-heading-title">SUPPLEMENT SHOW:</h2>
				<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
						<th></th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
							<td><%= user.name%></td>
							<td>フォロー数 <%= "#{user.follower.count}" %></td>
							<td>フォロワー数 <%= "#{user.followed.count}" %></td>
							<td><% if current_user.id != user.id %>
									<% if current_user.following?(user) %>
										<%= link_to 'フォロー外す', user_relationships_path(user.id), method: :DELETE, class: "btn-sm btn-danger" %>
									 <% else %>
									 	<%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn-sm btn-success" %>
									<% end %>
								<% end %>
							</td>
							<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
