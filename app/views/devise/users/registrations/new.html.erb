<div class = "container signup">
  <div class = "row">
    <div class="col-xs-12">
      <h2 class="elementor-heading-title">Sign up:</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class ="error center">
            <%= render "devise/shared/error_messages", resource: resource %>
          </div>

          <div class="field">
            <%= f.radio_button :gender, :true, id:"genre-edit-availability" %>
            <%= f.label :gender, "男性", for:"genre-edit-availability" %>
            <%= f.radio_button :gender, :false, id:"genre-edit-invalid" %>
            <%= f.label :gender, "女性", for:"genre-edit-invalid" %>
          </div>

          <div class="field">
            <%= f.label :氏名 %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :郵便番号 %><br />
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
          </div>

          <div class="field">
            <%= f.label :住所 %><br />
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>
        <%= link_to "既に登録済みの方はこちら", new_session_path(resource_name) %>
    </div>
  </div>
</div>
